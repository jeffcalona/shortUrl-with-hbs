<div class="row justify-content-center align-items-center vh-100 w-100">
    <div class="text-center" style="width: 300px">
        <img src="/img/perfiles/perfil.jpg" class="rounded-circle" style="width: 100px;">
        <h1 class="text-center my-4">Please Sign in</h1>
        <div>
            <form action="/auth/login" method="post">
                <input type="hidden" name="_csrf" value="{{csrfToken}}">
                <input type="text" class="form-control rounded-0 p-3" name="email" placeholder="Email">
                <input type="password" class="form-control mb-2 rounded-0 border-top-0 p-3" name="password" placeholder="Password">
                <button class="btn text-light w-100 mt-3 py-3" type="submit" style="background-color: #EE5007;">Sign in</button>
            </form>
        </div>
    </div>
</div>